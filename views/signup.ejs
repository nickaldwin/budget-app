<%- include('partials/frontheader') -%>
    <main class="flex justify-center h-screen w-screen items-center bg-auto bg-repeat bg-center animate-ltr-linear-infinite" style="background-image: url(/imgs/dandelionBackground.png)">
        <div class="card w-6/7 lg:w-auto h-auto shadow-xl bg-neutral text-neutral-content">
            <div class="card-body items-center text-center mt-5 w-full">
              <h2 class="card-title text-white text-4xl">Sign Up</h2>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST" class="items-center">
                  <div class="form-control mt-5 w-full md:w-6/7">
                    <label for="userName" class="input-group w-full input-group-sm md:input-group-md">
                      <span class="w-1/2 md:w-1/4 text-xs md:text-md">User Name</span>
                      <input type="text" placeholder="Username" class="input input-bordered w-3/4 input-sm md:input-md" id="userName" name="userName"/>
                    </label>
                  </div>
                  <div class="form-control mt-5 w-full md:w-6/7">
                    <label for="exampleInputEmail1" class="input-group w-full input-group-sm md:input-group-md">
                      <span class="w-1/2 md:w-1/4 text-xs md:text-md">Email Address</span>
                      <input type="text" placeholder="Email Address" class="input input-bordered w-3/4 input-sm md:input-md" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
                    </label>
                  </div>
                  <div class="form-control mt-5 w-full md:w-6/7">
                    <label for="password"  class="input-group w-full input-group-sm md:input-group-md">
                      <span class="w-1/2 md:w-1/4 text-xs md:text-md"> Password </span>
                      <input type="password" placeholder="Password" class="input input-bordered w-3/4 input-sm md:input-md" id="password" name="password">
                      </label>
                  </div>
                  <div class="form-control mt-5 w-full md:w-6/7">
                    <label for="confirmPassword"  class="input-group w-full input-group-sm md:input-group-md">
                      <span class="w-1/2 md:w-1/4 text-xs md:text-md">Confirm Password</span>
                      <input type="password" placeholder="Confirm Password" class="input input-bordered w-3/4 input-sm md:input-md" id="confirmPassword" name="confirmPassword">
                    </label>
                    <label class="flex justify-center label mt-4">
                      <span class="label-text text-white">We'll never share your email with anyone else.</span>
                    </label>
                    
                  </form>
                  <div class="card-actions justify-center">
                    <button type="submit" class="btn btn-outline text-white mt-5">Submit</button>
                  </div>
                  <span class="mt-3 text-white text-xs">If you already have an account, please <a class="text-secondary hover:text-secondary-content" href=/login>login</a></span>
            </div>
        </div>
    </main>

<%- include('partials/footer') -%>
